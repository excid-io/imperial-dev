<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wallet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
	<div class="container-fluid">
		<div class="row flex-nowrap">
			<div class="d-flex flex-column flex-shrink-0 p-3 min-vh-100 bg-light" style="width: 200px">
                <img src="~/img/logo.svg" alt="excid logo" height="60" class="d-inline-block align-text-top mb-4">
				<ul class="nav flex-column">
					<li class="nav-item">
						<a asp-controller="Home" asp-action="Index" class="btn btn-light w-100 text-start @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
							<img src="~/img/home.svg" width="25" height="25">
							<span class="align-bottom">Home</span>
						</a>
					</li>
					<li class="nav-item">
						<a class="btn btn-light w-100 text-start">
							<img src="~/img/people.svg" width="25" height="25">
							<span class="align-bottom">Profiles</span>
						</a>
					</li>
					<li class="nav-item">
                        <a asp-controller="Certificates" asp-action="Index" class="btn btn-light w-100 text-start @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Certifiactes" ? "active" : "")">
                            <img src="~/img/key.svg" width="25" height="25">
                            <span class="align-bottom">Certificates</span>
                        </a>
					</li>
					<li class="nav-item">
						<a class="btn btn-light w-100 text-start dropdown-toggle" href="#didmethods" data-bs-toggle="collapse" aria-expanded="false" aria-controls="didmethods">
                            <img src="~/img/did.svg" width="25" height="25">
							<span class="align-bottom">DIDs</span>
						</a>
						<div class="collapse @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Didself" ? "show" : "")" id="didmethods">
							<ul class="nav flex-column">
							<li>
									<a asp-controller="Didself" asp-action="Index"  class="px-4 btn btn-light w-100 text-start @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Didself" ? "active" : "")"><i>did:self</i></a>
							</li>
							<li>
								<a class="px-4 btn btn-light w-100 text-start"><i>did:web</i></a>
							</li>
						</ul>
						</div>
					</li>
					<li class="nav-item">
						<a asp-controller="Credentials" asp-action="Index" class="btn btn-light w-100 text-start @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Credentials" ? "active" : "")">
							<img src="~/img/vc.svg" width="25" height="25">
							<span class="align-bottom">Credentials</span>
						</a>
					</li>
					<li class="nav-item">
						<a class="btn btn-light w-100 text-start">
                            <img src="~/img/settings.svg" width="25" height="25">
							<span class="align-bottom">Settings</span>
						</a>
					</li>
					<li class="nav-item">
						<a class="btn btn-light w-100 text-start">
							<img src="~/img/help.svg" width="25" height="25">
							<span class="align-bottom">Support</span>
						</a>
					</li>
					<li class="nav-item">
						<a class="btn btn-light w-100 text-start">
							<img src="~/img/info.svg" width="25" height="25">
							<span class="align-bottom">About</span>
						</a>
					</li>
					<li class="nav-item">
						@if (User.Identity != null && User.Identity.IsAuthenticated)
						{
							<a asp-controller="Account" asp-action="Logout" class="btn btn-light w-100 text-start">
								<img src="~/img/logout.svg" width="25" height="25">
								<span class="align-bottom">Logout</span>
							</a>
						}
					</li>
					</ul>
			</div>
			<div class="col py-3">
                <main role="main" class="pb-3">
                    <div class="container-fluid p-3">
                        @RenderBody()
                    </div>
                </main>
			</div>
		</div>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
	<script src="~/js/web-crypto.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
